using System;

class Program
{
    static void Main()
    {
        // Úvodní informace
        Console.WriteLine("Hra Kámen, Nůžky, Papír");
        Console.WriteLine("Zadej 'kámen', 'nůžky' nebo 'papír'.");

        // Uživatelský vstup
        string uzivatelVyber = Console.ReadLine().ToLower();

        // Kontrola platnosti vstupu
        if (uzivatelVyber != "kámen" && uzivatelVyber != "nůžky" && uzivatelVyber != "papír")
        {
            Console.WriteLine("Neplatný vstup! Zadej 'kámen', 'nůžky' nebo 'papír'.");
            return;
        }

        // Náhodný výběr počítače
        Random random = new Random();
        string[] moznosti = { "kámen", "nůžky", "papír" };
        string pocitacVyber = moznosti[random.Next(0, 3)];

        Console.WriteLine($"Počítač zvolil: {pocitacVyber}");

        // Rozhodnutí o vítězi
        if (uzivatelVyber == pocitacVyber)
        {
            Console.WriteLine("Remíza!");
        }
        else if ((uzivatelVyber == "kámen" && pocitacVyber == "nůžky") ||
                 (uzivatelVyber == "nůžky" && pocitacVyber == "papír") ||
                 (uzivatelVyber == "papír" && pocitacVyber == "kámen"))
        {
            Console.WriteLine("Vyhrál(a) jsi!");
        }
        else
        {
            Console.WriteLine("Prohrál(a) jsi!");
        }
    }
}
